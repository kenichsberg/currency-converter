{
  "name": "currency-converter",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "lib/common",
    "packages/backend",
    "packages/frontend"
  ],
  "scripts": {
    "build:common": "cd lib/common && npm run build",
    "dev:backend": "cd packages/backend && npm run build && npm run start",
    "dev:frontend": "cd packages/frontend && npm run dev",
    "dev": "npm run build:common && run-p dev:*"
  },
  "volta": {
    "node": "22.14.0",
    "npm": "11.2.0"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
